<h1>Edit Article</h1>

<% if @article.errors.any? %>
    <h2>The following errors prevented article from being saved</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        
        <% end %>
    </ul>
<% end %>


<%= form_with model: @article, local: true,  data: { turbo: false } do |form| %>
    <p>
        <%= form.label :title %> <br/>
        <%= form.text_field :title %>
    </p>
    
    <p>
        <%= form.label :description %><br/>
        <%= form.text_area :description %>       
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Cancel and Return to Articles List', articles_path %>