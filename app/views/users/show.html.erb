<div class="articles-headline"><h1><%= @user.username %>'s Profile</h1></div>

<h3>Articles</h3>
<div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<% if logged_in? && @user == current_user %>
    <%= link_to "Edit your Profile", edit_user_path %>
    <%= link_to "Create new Article", new_article_path %>
    <%= link_to 'Delete User', @user, 
            data: { turbo_method: :delete,
            turbo_confirm: 'Are you sure?' } %>
    <%= link_to 'Return to Users List', users_path %>
<% end %>

<%= link_to 'Return to Home Page', root_path %>
